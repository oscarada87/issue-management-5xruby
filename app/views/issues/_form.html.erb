<%= form_with(model: issue) do |form| %>
  <% if issue.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(issue.errors.count, "error") %> prohibited this issue from being saved:</h2>

      <ul>
        <% issue.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :title, style: "display: block" %>
    <%= form.text_field :title %>
  </div>

  <div>
    <%= form.label :content, style: "display: block" %>
    <%= form.text_field :content %>
  </div>

  <div>
    <%= form.label :priority, style: "display: block" %>
    <%= form.select :priority, Issue.human_enum_collection(:priorities) %>
  </div>

  <div>
    <%= form.label :status, style: "display: block" %>
    <%= form.select :status, Issue.human_enum_collection(:statuses) %>
  </div>

  <div>
    <%= form.label :started_at, style: "display: block" %>
    <%= form.date_field :started_at %>
  </div>

  <div>
    <%= form.label :finished_at, style: "display: block" %>
    <%= form.date_field :finished_at %>
  </div>

  <div>
    <%= form.submit %>
  </div>
<% end %>
