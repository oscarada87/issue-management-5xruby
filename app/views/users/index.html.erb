<div id="users" class="container">
  <h1>使用者列表</h1>
  <%= search_form_for @q do |f| %>
    <div class="row row-cols-3">
      <div class="col">
        <%= f.label :account_cont ,class: "form-label" %>
        <%= f.search_field :account_cont ,class: "form-control" %>
      </div>
    </div>
    <div class="d-flex mt-2 flex-row-reverse">
      <%= f.submit clsss: 'btn btn-outline-dark mx-2' %>
      <%= link_to "清除", users_path, class: 'btn btn-outline-dark mx-2' %>
    </div>
  <% end %>
  <table class="table table-striped">
    <thead>
      <tr>
        <th scope="col">#</th>
        <th scope="col"><%= Issue.human_attribute_name(:account) %></th>
        <th scope="col"><%= Issue.human_attribute_name(:role) %></th>
        <th scope="col"></th>
        <th scope="col"></th>
      </tr>
    </thead>
    <tbody>
      <% @users.each do |user| %>
        <tr>
          <td><%= user.id %></td>
          <td><%= user.account %></td>
          <td><%= user.role.name %></td>
          <td><%= button_to '編輯', edit_user_path(user), method: :get, class: "btn btn-primary btn-sm" %></td>
          <td><%= button_to '刪除', user_path(user), method: :delete, class: "btn btn-danger btn-sm" %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
  <%= paginate @users %>
</div>
