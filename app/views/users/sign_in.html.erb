<div class="container">
  <h1>帳號登入</h1>
  <%= form_with(model: User.new, url: sign_in_users_path) do |f| %>
    <div class="mb-3">
      <%= f.label :account, class: "form-label" %>
      <%= f.text_field :account, class: "form-control" %>
    </div>

    <div class="mb-3">
      <%= f.label :password, class: "form-label" %>
      <%= f.text_field :password, class: "form-control" %>
    </div>
    <div class="mb-3">
      <%= f.submit '登入', class: "btn btn-primary" %>
    </div>
  <% end %>
  <%= link_to '回首頁', root_path %>
</div>
