<div id="tags" class="container">
  <h1>標籤列表</h1>
  <%= search_form_for @q do |f| %>
    <div class="row row-cols-3">
      <div class="col">
        <%= f.label :title_cont ,class: "form-label" %>
        <%= f.search_field :title_cont ,class: "form-control" %>
      </div>
    </div>
    <div class="d-flex mt-2 flex-row-reverse">
      <%= f.submit clsss: 'btn btn-outline-dark mx-2' %>
      <%= link_to "清除", tags_path, class: 'btn btn-outline-dark mx-2' %>
    </div>
  <% end %>
  <table class="table table-striped">
    <thead>
      <tr>
        <th scope="col">#</th>
        <th scope="col"><%= Tag.human_attribute_name(:title) %></th>
        <th scope="col"></th>
        <th scope="col"></th>
      </tr>
    </thead>
    <tbody>
      <% @tags.each do |tag| %>
        <tr>
          <td><%= tag.id %></td>
          <td><%= tag.title %></td>
          <td><%= button_to '編輯', edit_tag_path(tag), method: :get, class: "btn btn-primary btn-sm" %></td>
          <td><%= button_to '刪除', tag_path(tag), method: :delete, class: "btn btn-danger btn-sm" %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
  <%= paginate @tags %>
  <%= button_to '新標籤', new_tag_path, method: :get, class: "btn btn-secondary" %>
</div>
